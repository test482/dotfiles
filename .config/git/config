[core]
    autocrlf = input
[column]
    ui = auto
[branch]
    sort = -committerdate # sort branches by last commit date
[tag]
    sort = -version:refname # tag names are treated as versions
[init]
    defaultBranch = master
[color]
    branch = auto
    diff = auto
    grep = auto
    showbranch = auto
    status = auto
[alias]
    br = branch
    cm = commit
    co = checkout
    last = log -1 --stat
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit
    st = status
    undo = reset HEAD^
[log]
    date = iso
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
[push]
	autoSetupRemote = true
	followTags = true
[fetch]
	prune = true
	pruneTags = true
